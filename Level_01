class gamestate
{
public:
	void fillwithcandies();
	void droppingcandies();
};

void gamestate::fillwithcandies()
{
	int r = 0, c = 0;
	for (int j = 0; j < 5; j++)
	{
		for (int i = 0; i < 8; i++)
		{
			int rnd = rand() % 5;
			Candy::MyForm::level[j, i] = gcnew PictureBox();
			Candy::MyForm::panel1->Controls->Add(Candy::MyForm::level[j, i]);
			Candy::MyForm::level[j, i]->Parent = Candy::MyForm::groupBox1;
			Candy::MyForm::level[j, i]->Location = System::Drawing::Point(50 * r, 50 * c);
			Candy::MyForm::level[j, i]->Size = System::Drawing::Size(50, 50);
			Candy::MyForm::level[j, i]->Image = Candy::MyForm::candies[rnd]->Image;
			Candy::MyForm::level[j, i]->SizeMode = PictureBoxSizeMode::StretchImage;
			r++;
		}
		c++;
		r = 0;
	}
}

void gamestate::droppingcandies()
{
	int rnd = rand() % 5;
	for (int j = 4; j > 0; j--)
	{
		for (int i = 0; i < 8; i++)
		{

			if (Candy::MyForm::level[j, i]->Image== Candy::MyForm::emptybox->Image)
			{
				int p = j;
				while (p != 0)
				{
					Candy::MyForm::level[p, i]->Image = Candy::MyForm::level[p-1, i]->Image;
					p--;
				}
				Candy::MyForm::level[0, i]->Image = Candy::MyForm::candies[rnd]->Image;
			}
		}
	}
}

void gameBegins()
{
	gamestate fc;
	fc.fillwithcandies();
	fc.droppingcandies();
}
}
